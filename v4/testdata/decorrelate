exec
CREATE TABLE a (x INT, y INT)
----
table a
  x NULL
  y NULL

exec
CREATE TABLE b (x INT, z INT)
----
table b
  x NULL
  z NULL

normalize
SELECT * FROM a WHERE EXISTS (SELECT * FROM b WHERE a.x = b.x)
----
arrange
 ├── columns: x:1* y:2
 ├── equiv: (1,3)
 └── semi-join
      ├── columns: a.x:1* a.y:2
      ├── equiv: (1,3)
      ├── scan
      │    └── columns: a.x:1 a.y:2
      ├── scan
      │    └── columns: b.x:3 b.z:4
      └── filters [unbound=(1,3)]
           └── eq [unbound=(1,3)]
                ├── variable: a.x [unbound=(1)]
                └── variable: b.x [unbound=(3)]

normalize
SELECT * FROM a WHERE EXISTS (SELECT 1 FROM b WHERE a.x = b.x)
----
arrange
 ├── columns: x:1* y:2
 ├── equiv: (1,3)
 └── semi-join
      ├── columns: a.x:1* a.y:2
      ├── equiv: (1,3)
      ├── scan
      │    └── columns: a.x:1 a.y:2
      ├── scan
      │    └── columns: b.x:3 b.z:4
      └── filters [unbound=(1,3)]
           └── eq [unbound=(1,3)]
                ├── variable: a.x [unbound=(1)]
                └── variable: b.x [unbound=(3)]

normalize
SELECT * FROM a WHERE NOT EXISTS (SELECT * FROM b WHERE a.x = b.x)
----
arrange
 ├── columns: x:1* y:2
 ├── equiv: (1,3)
 └── anti-join
      ├── columns: a.x:1* a.y:2
      ├── equiv: (1,3)
      ├── scan
      │    └── columns: a.x:1 a.y:2
      ├── scan
      │    └── columns: b.x:3 b.z:4
      └── filters [unbound=(1,3)]
           └── eq [unbound=(1,3)]
                ├── variable: a.x [unbound=(1)]
                └── variable: b.x [unbound=(3)]

# TODO(andy): These queries look broken, since columns in "a" are not in scope
#             for the right side of the join, at least in Postgres and SQLS.
#
# normalize
# SELECT * FROM a, (SELECT * FROM b WHERE a.x = b.x)
# ----
#
# normalize
# SELECT * FROM a, (SELECT b.x FROM b WHERE a.x = b.x)
# ----

normalize
SELECT * FROM a WHERE 1000000 < (SELECT SUM(z) FROM b WHERE a.x = b.x)
----
arrange
 ├── columns: x:1 y:2
 └── select
      ├── columns: a.x:1 a.y:2 column1:5*
      ├── group-by
      │    ├── columns: a.x:1 a.y:2 column1:5
      │    ├── left-join
      │    │    ├── columns: a.x:1* a.y:2 b.x:3* b.z:4
      │    │    ├── equiv: (1,3)
      │    │    ├── scan
      │    │    │    └── columns: a.x:1 a.y:2
      │    │    ├── scan
      │    │    │    └── columns: b.x:3 b.z:4
      │    │    └── filters [unbound=(1,3)]
      │    │         └── eq [unbound=(1,3)]
      │    │              ├── variable: a.x [unbound=(1)]
      │    │              └── variable: b.x [unbound=(3)]
      │    ├── projections [unbound=(1,2)]
      │    │    ├── variable: a.x [unbound=(1)]
      │    │    └── variable: a.y [unbound=(2)]
      │    └── projections [unbound=(4)]
      │         └── function: sum [unbound=(4)]
      │              └── variable: b.z [unbound=(4)]
      └── filters [unbound=(5)]
           └── gt [unbound=(5)]
                ├── variable: column1 [unbound=(5)]
                └── const: 1000000
